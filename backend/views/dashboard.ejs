<h2>Moji oglasi</h2>

<table class="table table-striped ads-list">
    <thead>
        <tr>
            <th>Naziv</th>
            <th>Kraj</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        <%list.forEach(function(item){%>
        <tr>
          
            <td><%=item.name%></td>
            <td><%=item.city%></td>
            <td>
                <a href="/dashboard/edit/<%=item._id%>"><i class="fa fa-pencil fa-lg" aria-hidden="true"></i></a>
                <a href="/dashboard/delete/<%=item._id%>" onclick="return confirm('Are you sure to delete this record ?');"><i class="fa fa-trash fa-lg" aria-hidden="true"></i></a>
            </td>
        </tr>
        <%});%>
    </tbody>
</table>

<%if(list.length < 1){%>
  <h5>Trenutno nimate nobenega oglasa.</h5>
  <a href="/dashboard/create" class="create-btn">Dodaj nov oglas</a>
<%}%>
