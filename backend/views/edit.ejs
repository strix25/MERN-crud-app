<%
var regions = ["Notranjska","Podravska","Pomurska","Gorenjska","Primorska","Savinjska","KoroÅ¡ka","Dolenjska","Posavska","Zasavska"];
%>
<h3>this is edit</h3>
<form class="form-signin" method="POST" action="/dashboard/edit/<%=item._id%>" enctype="multipart/form-data">
  
  <h1 class="h3 mb-3 font-weight-normal">edit</h1>


  <label for="name" class="sr-only">naslov</label>
  <input type="text" style="margin-bottom:10px;" id="name" name="name" class="form-control" value="<%=item.name%>" placeholder="naziv" required autofocus="">

  <label for="description" class="sr-only">opis</label>
 
  <textarea name="description" style="margin-bottom:10px;" id="description" cols="30" rows="10" class="form-control" placeholder="opis"><%=item.body%></textarea>

  

  <select name="city" id="city" style="margin-bottom:10px;" value="<%=item.city%>">
      <% for(var h=0; h < regions.length; h++) { %>
      <option value="<%=regions[h]%>" <%if(item.city === regions[h]){%> selected <%}%> ><%=regions[h]%></option>
      <%}%>
    </select>
  
  <select name="apparType" id="apparType" >
    <% for(var i=1; i < 5; i++) { %>
    <option value="<%=i%>" <%if(item.apparType==i){%> selected <%}%> ><%=i%> sobno</option>
    <%}%>
  </select>

  <div class="checkbox mb-3" >
    <input type="checkbox" name="ac" value="1" <%if(item.ac){%> checked <%}%> > Klima<br>
    <input type="checkbox" name="parking" value="1" <%if(item.parking){%> checked <%}%>> Park plac<br>
    <input type="checkbox" name="balcony" value="1" <%if(item.balcony){%> checked <%}%>> Balkon<br>
  </div>

  
  <label for="pictures" class="">Izberite glavno sliko</label>
  <input type="file" multiple style="margin-bottom:10px;" id="mainpic" name="mainpic" class="form-control" required>
  <img src="//localhost:9000/<%=item.mainPicture%>" alt="" style="height: 190px;">

  <label for="pictures" class="">Izberite slike za gelerijo</label>
  <input type="file" multiple style="margin-bottom:10px;" id="pictures" name="pictures" class="form-control" required>
  
  <% for(var j=0; j < item.pictures.length; j++) { %>
    <%console.log(item.pictures[j].path);%>
    <img src="//localhost:9000/<%=item.pictures[j].path.replace('\\', '/')%>" alt="" style="width:190px;">
  <%}%>

  <button class="btn btn-lg btn-primary btn-block" type="submit">Posodobi oglas</button>
</form>